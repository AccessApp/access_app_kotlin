<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="16dp"
    android:background="@drawable/rounded_linear_7dp"
    android:backgroundTint="@color/gray"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:gravity="center"
    android:orientation="horizontal"
    android:focusable="true">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/priority_text"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:layout_marginStart="10dp"
        android:background="@color/disabled_tint"
        android:backgroundTint="@color/disabled_tint"
        android:enabled="false"
        android:fontFamily="@font/rubik_medium"
        android:insetLeft="6dp"
        android:insetTop="6dp"
        android:insetRight="6dp"
        android:insetBottom="6dp"
        android:letterSpacing="0.0"
        android:minWidth="0dp"
        android:minHeight="40dp"
        android:stateListAnimator="@null"
        android:text="P"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:focusable="true" />

    <TextView
        android:id="@+id/hourFromTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="18dp"
        android:fontFamily="@font/rubik_bold"
        android:gravity="center"
        android:lineSpacingExtra="10sp"
        android:text="10:00 - 11:00"
        android:textAlignment="center"
        android:textColor="@color/disabled_tint"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/personIconSlot"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="55dp"
        android:tint="@color/disabled_tint"
        app:srcCompat="@drawable/ic_person_outline_24px" />

    <TextView
        android:id="@+id/occupiedMax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:fontFamily="@font/rubik_bold"
        android:text="14/20"
        android:textColor="@color/disabled_tint" />

    <ImageView
        android:id="@+id/checkIcon"
        android:layout_width="11dp"
        android:layout_height="8dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="13dp"
        app:srcCompat="@drawable/check" />
</LinearLayout>