<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/rounded_linear_7dp"
    android:backgroundTint="@color/grey"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/priority_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="12dp"
        android:backgroundTint="@color/disabled_tint"
        android:clickable="false"
        android:enabled="false"
        android:focusable="false"
        android:fontFamily="@font/rubik_medium"
        android:insetLeft="6dp"
        android:insetTop="6dp"
        android:insetRight="6dp"
        android:insetBottom="6dp"
        android:letterSpacing="0.0"
        android:minWidth="0dp"
        android:minHeight="40dp"
        android:text="@string/priority"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:cornerRadius="6dp" />

    <TextView
        android:id="@+id/hourFromTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="50dp"
        android:layout_toEndOf="@id/priority_text"
        android:fontFamily="@font/rubik_bold"
        android:gravity="center"
        android:lineSpacingExtra="10sp"
        android:text="@string/_10_00_11_00"
        android:textAlignment="center"
        android:textColor="@color/disabled_tint"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/personIconSlot"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="6dp"
        android:layout_toStartOf="@id/occupiedMax"
        app:srcCompat="@drawable/ic_person_outline_24px"
        app:tint="@color/disabled_tint" />

    <TextView
        android:id="@+id/occupiedMax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="17dp"
        android:layout_toStartOf="@id/checkIcon"
        android:fontFamily="@font/rubik_bold"
        android:text="@string/_100_100"
        android:textColor="@color/disabled_tint"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/checkIcon"
        android:layout_width="11dp"
        android:layout_height="8dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="14dp"
        app:srcCompat="@drawable/check" />
</RelativeLayout>